{
  "name": "music-collection",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "start:json-server": "json-server --watch mock.json --delay 1000",
    "prepare": "husky",
    "lint": "eslint 'src/**/*.{ts,js}' --no-ignore",
    "lint:fix": "eslint 'src/**/*.{ts,js}' --fix --no-ignore",
    "prettier": "prettier --check 'src/**/*.{ts,scss,html}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,scss,html}'",
    "format": "npm run lint:fix && npm run prettier:fix"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupJest.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.spec.json"
      }
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.10",
    "@angular/common": "^15.2.10",
    "@angular/compiler": "^15.2.10",
    "@angular/core": "^15.2.10",
    "@angular/forms": "^15.0.0",
    "@angular/platform-browser": "^15.2.10",
    "@angular/platform-browser-dynamic": "^15.2.10",
    "@angular/router": "^15.2.10",
    "@ngneat/transloco": "^4.0.0",
    "@ngx-translate/core": "^14.0.0",
    "@ngx-translate/http-loader": "^6.0.0",
    "autoprefixer": "^10.4.19",
    "json-server": "^0.16.3",
    "postcss": "^8.4.38",
    "rxjs": "^7.4.0",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.0",
    "@angular/cli": "~15.0.0",
    "@angular/compiler-cli": "^15.0.0",
    "@types/jasmine": "~4.3.0",
    "@types/jest": "^29.5.12",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-angular": "^4.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jasmine-core": "~4.5.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^15.2.6",
    "prettier": "^3.3.2",
    "typescript": "~4.8.2"
  }
}
